# DocuForge Environment Configuration

# Application Settings
APP_NAME=DocuForge
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Inngest Configuration
INNGEST_EVENT_KEY=your-inngest-event-key
INNGEST_SIGNING_KEY=your-inngest-signing-key
INNGEST_BASE_URL=http://localhost:8288
INNGEST_DEV=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://docuforge:docuforge123@localhost:5432/docuforge
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_MAX_CONNECTIONS=20

# Storage Configuration (MinIO/S3)
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=documents
STORAGE_SECURE=false

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=documents

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Processing Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
OCR_TIMEOUT=300  # 5 minutes
OCR_DPI=300

# OCR Engine Configuration
OCR_ENGINES=["tesseract", "paddle", "easy"]
OCR_ENSEMBLE_WEIGHTS=[0.4, 0.4, 0.2]

# Agentic Correction Configuration
AGENTIC_CORRECTION_MODEL=gpt-4
AGENTIC_CORRECTION_TEMPERATURE=0.1
VISION_VALIDATION_MODEL=gpt-4-vision-preview

# Security Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Monitoring Configuration
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

# Supported file formats
SUPPORTED_FORMATS=[".pdf", ".png", ".jpg", ".jpeg", ".tiff", ".bmp"]
